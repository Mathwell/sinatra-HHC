<h1> <%=@nurse.name%>  (uid: <%=@nurse.user.id%>) patients</h1><br>

<TABLE border='5'>
   <TR>
      <TH COLSPAN="7">
         <H3><BR><%=@nurse.name%> patients</H3>
      </TH>
   </TR>

  <tr>
    <th>Patient</th>
    <th>DOB</th>
    <th>SSN</th>
    <th>Insurance</th>
    <th>Status</th>
    <th>Schedule</th>
    <th> </th>
  </tr>

<% @nurse.patients.each do |patient| %>
  <tr align="left">
    <td> <%=patient.name%>   </td>
    <td> <%=patient.dob%>   </td>
    <td> <%=patient.ssn%>   </td>
    <td> <%=patient.insurance%>   </td>
    <td> <%=patient.status%>   </td>
    <td> <%=patient.schedule%>   </td>
    <td> <a href="/patients/<%= patient.slug %>">View</a>
      <a href="/patients/<%= patient.slug %>/edit">Edit</a>
      <a href="/patients/<%= patient.slug %>/delete">Delete</a>
    </td>
  </tr>
  <%end%>

  <TR>
     <TH COLSPAN="7">
        <H3><BR><a href="/add">Add Patient   </a> </H3>
     </TH>
  </TR>
</table>

<br>
<table>
  <tr>
    <td><a href="/add">Add Patient   </a></td>
    <td></td>
    <td><a href="/nurses/<%=@nurse.slug%>/edit">Edit Information   </a></td>
    <td></td>
    <td><a href="/logout">Log Out    </a></td>
  </tr>
</table>
